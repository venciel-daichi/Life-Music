<h1 class = "top_block block_2"></h1>
<div class="top_back_image">
<div class = "login_signin log_sign_bar">
<h2 class="log_sign_text">Log in</h2>
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name, autofocus: true, autocomplete: "name"  , class:"log_sign_button"%>
  </div>

  <div class="field">
    <%= f.label :password %><br />
    <%= f.password_field :password, autocomplete: "current-password"  , class:"log_sign_button"%>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Log in" , class:"log_sign_button" %>
  </div>
<% end %>
<%= render "devise/shared/links" %>
</div>
</div>
