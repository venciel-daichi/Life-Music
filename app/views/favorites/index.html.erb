<h1 class = "top_block"></h1>
<%= render 'users/side'  %>
<% @favorites.each do |favorite| %>
<div class = "col-xs-8 main_bar">

	<div class="box plofile_bar_box  iei_2">
		<div class = "box plofile_bar_image_box">
			<p>	<%= attachment_image_tag favorite.music.user, :image, :fill, 50, 50, format: 'jpeg', fallback: "noimage_user.jpeg",size: '50x50' , class:"iei_2" %>
			</p>

		</div>
		<div class = "box plofile_bar_name_box iei_2 font_size_1">
			<p>
				<%= link_to favorite.music.user.name , user_path(favorite.music.user.id) , :style=>"color:#282929" %>
			</p>
		</div>
	</div>
		<div class="box_right">
			<div class = "box image_box">
				<p><%= attachment_image_tag favorite.music, :image, :fill, 350, 350, format: 'jpeg', fallback: "noimage_music.jpeg",size: '350x350' , class:"iei_2" %>
				</p>
			</div>
			<div class = "box music_name_box iei_2 posted_font">
				<p><%= favorite.music.music_name %></p>
			</div>
			<div class = "box artist_name_box iei_2 posted_font">
				<p><%= favorite.music.artist_name %></p>
			</div>
		</div>

		<div class = "box introduction_box iei_2 posted_font">
			<p><%= favorite.music.introduction %></p>
		</div>

		<div class = "box url_box iei_2 posted_font">
			<p><%= favorite.music.music_url %></p>
		</div>

</div>
<% end %>
<%= paginate @favorites, class: "paginate" %>
<!-- グリッドシステムの閉じタグ（containerとrow） -->
	</div>
</div>
<!-- グリッドシステムの閉じタグ（containerとrow） -->
