<!DOCTYPE html>
<html>
  <head>
    <title>LifeMusic</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

<header class="navbar header_color header_z_index">
    <div class = "container">
      <nav class = "nav navbar-nav navbar-left">
        <span class = "text title_text">Life Music</span>
      </nav>
      <nav>
        <ul class = "nav navbar navbar-right nav-tabs"">

          <li>
            <% if  user_signed_in? %>
            <%= link_to "Music" , "/" , class:"text header_text" %>
            <% else %>
            <%= link_to "Home" , top_path , class:"text header_text" %>
            <!-- <a class = "glyphicon glyphicon-home home" href="/" >Home</a> -->
            <% end %>
          </li>

          <li>
            <% if  user_signed_in? %>
            <%= link_to "Follow" , follows_path , class:"text header_text" %>
            <% else %>
            <%= link_to "About" , "/about" , class:"text header_text" %>
            <!-- <a class = "glyphicon glyphicon-link about" href="/home/about" >About</a> -->
            <% end %>
          </li>

          <li>
            <% if user_signed_in? %>
            <%= link_to "Fav" , favs_path , class:"text header_text" %>
            <% else %>
            <%= link_to "Sign up" , "/users/sign_up", class:"text header_text"  %>
            <!-- <a class = "glyphicon glyphicon-edit sign_up" href="/users/sign_up" >sign up</a> -->
            <% end %>
          </li>

          <li>
            <% if user_signed_in? %>
            <%= link_to "Log out" , destroy_user_session_path, method: :delete, class:"text header_text" %>
            <% else %>
            <%= link_to "Log in" , "/users/sign_in", class:"text header_text" %>
            <!-- <a class = "glyphicon glyphicon-log-in sign_in" href="/users/sign_in" >login</a> -->
            <% end %>

          </li>
        </ul>
      </nav>
    </div>
  </header>

    <%= yield %>
  </body>
</html>
