<h1>edit</h1>
<h1 class = "top_block"></h1>
<h1 class="new_music_head">Edit My Music</h1>

<div class = "new_music_box">
	<%= form_for(@music) do |f| %>
			<div class = "box new_music_image edit_color_1">
				<p>image_id</p>
				<%= f.file_field :image , class:"file_bar" %>
			</div>
			<div class = "box new_music_name">
				<p>music_name</p>
				<%= f.text_field :music_name %>
			</div>
			<div class = "box new_artist_name edit_color_1">
				<p>artist_name</p>
				<%= f.text_field :artist_name , class:"edit_color_2" %>
			</div>
			<div class = "box new_introduction">
			<p>introduction</p>
				<%= f.text_area :introduction %>
			</div>
			<div class = "box new_music_url edit_color_1">
			<p>URL</p>
			<%= f.text_field :music_url , class:"edit_color_2" %>
			</div>
		 <%= f.submit 'Update Music' %>
	<% end %>
</div>